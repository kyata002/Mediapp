<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_154sdp"
        >
        <ImageView
            android:background="#3EDF4E"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_124sdp"/>
        <ImageView
            android:id="@+id/bt_back_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            android:layout_margin="@dimen/_4sdp"/>
        <ImageView
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_72sdp"
            android:src="@drawable/ic_account_demo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_44sdp"/>

    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_32sdp"
            android:text="Tên Nhà Thuốc"
            android:textSize="@dimen/_24sdp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/bt_editname_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại:"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="0963508915"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/bt_editsdt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:text="domanhhungit1@gmail.com"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/bt_editemail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>